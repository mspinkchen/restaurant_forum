    <% @restaurants.each do |restaurant| %>
   <div class = "col-sm-6, col-md-4">
     <div class = "restaurant-item">
      <img src="https://api.fnkr.net/testimg/350x200/00CED1/FFF/?text=img+placeholder", class: "img-responsive center-block">

      <!--<%= image_tag restaurant.image %> -->

      <div class="caption">
        <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
        <P class="label label-info"><%= restaurant.category.name %></P>
        <p><%= truncate(restaurant.description, length: 70)%></p>
      </div>
     </div>
   </div>
   <% end %>
   
    <div class="text-center">
      <%= paginate @restaurants %>
    </div>
