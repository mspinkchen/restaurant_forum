  <ul class="nav nav-pills nav-pills-center">
    <li><%= link_to "全部餐廳", root_path%></li>
    <% @categories.each do |category| %>
      <li><%= link_to category.name, category_path(category) %></li>
    <% end %>
  </ul>

<div class="container">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
   <div class = "col-sm-6, col-md-4">
     <div class = "restaurant-item">
      <%= image_tag restaurant.image, class: "img-responsive center-block" %>
      <div class="caption">
        <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
        <P class="label label-info"><%= restaurant.category.name %></P>
        <p><%= truncate(restaurant.description, length: 70)%></p>
      </div>
     </div>
   </div>
   <% end %>
   
    <div class="text-center">
      <%= paginate @restaurants %>
    </div>

  </div>
</div>