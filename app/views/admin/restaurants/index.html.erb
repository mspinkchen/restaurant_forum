<div class = "container">
  <h1> 餐廳後台 </h1>

  <div>
    <%= link_to 'Add Restaurant', new_admin_restaurant_path, class: "btn btn-primary" %>
  </div>
  <br>

  <div>
    <table class = "table table-striped table-hover">
      <thead>
      <tr>
        <th>#</th>
        <th>Category</th>
        <th>Name</th>
        <th>#</th>
      </tr>
      </thead>

      <tbody>
        <% @restaurants.each do |restaurant| %>
        <tr>
          <th scope="row"><%= restaurant.id %></th>
          <td><%= restaurant.category.name %></td>
          <td><%= restaurant.name %></td>
          <td><%= link_to admin_restaurant_path(restaurant) do %>
            <i class="fa fa-file-text-o" aria-hidden="true"></i>
            <% end %>
          </td>
          <td><%= link_to edit_admin_restaurant_path(restaurant) do %>
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            <% end %>
          </td>
          <td><%= link_to admin_restaurant_path(restaurant), method: :delete, data: {confirm:"Are you sure?"} do %>
            <i class="fa fa-trash" aria-hidden="true"></i>
            <% end %>
          </td>
        </tr>
        <%end%>
      </tbody>
    </table>
  </div>


  <div class = "text-center">
    <%= paginate @restaurants %>
  </div>

</div>