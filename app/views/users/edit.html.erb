 <div class = "container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
        <h1>Edit Profile</h1>

        <%= form_for @user do |f| %> 

        <div class = "form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, placeholder: "暱稱", class: "form-control"%>
        </div>

        <div class = "form-group">
          <%= f.label :intro, "自我介紹" %>
          <%= f.text_area :intro, placeholder: "留下你的自我介紹！", class: "form-control"%>
        </div>
        
         <div class = "form-group">
          <%= f.label :avatar, "上傳大頭照" %>
          <%= f.text_field :avatar, class: "form-control"%>
        </div>

        <div class = "form-group">
          <%= f.submit class: "btn btn-primary" %>
          <%= link_to "Cancel", user_path(@user), class: "btn btn-default" %>
        </div>

        <% end %>
      </div>
      </div>
    </div>
    