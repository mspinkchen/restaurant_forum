
<div class = "container">
  <div class = "row">

    <div class = "col-sm-4 col-md-3">
      <img src="https://api.fnkr.net/testimg/350x200/00CED1/FFF/?text=img+placeholder", class = "img-responsive img-rounded" width="150px", height="150px">
    </div>

    <div class = "col-sm-8 col-md-9">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <p><%= simple_format @user.intro %></p>
      <% if @user.email = current_user.email %>
      <%= link_to 'Edit Profile', edit_user_path(@user) %>
      <% end %>
    </div>

    <br>

  </div>
</div>