
<div class = "container">
  <div class = "row">
    <div class="col-md-10 col-md-offset-1">

    <div class = "col-sm-4 col-md-3">
      <div class = "text-center my-avatar">
      <%= image_tag @user.avatar, class: "img-responsive img-rounded" %>
    </div>
    </div>

    <div class = "col-sm-8 col-md-9">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <ul class = "list-unstyled list-inline">
        <li><%= @commented_restaurants.count %>已評論餐廳</li>
        <li><%= @favorited_restaurants.count %>已收藏餐廳</li>
        <li><%= @followings.count %>followings</li>
        <li><%= @followers.count %>followers</li>
      </ul>
      <p><%= simple_format @user.intro %></p>
      <% if @user.email == current_user.email %>
      <%= link_to 'Edit Profile', edit_user_path(@user) %>
      <% end %>
    </div>

    <div class = "clearfix">
    </div>

    <br>

<!--自己追蹤的人-->


    <div class = "col-sm-4">
      <div class = "panel panel-default">
        <div class = "panel-heading">
          <h3 class = "panel-title"><%= @followings.count %> followings </h3>
         </div>
        <div class = "panel-body">
          <% @followings.each do |following| %>
          <%= link_to user_path(following) do%>
          <div class = "my-followings">
          <div><img src="http://via.placeholder.com/30x30"></div>
          <!--<div><%= image_tag following.avatar %></div>-->
          <%= following.name %>
          </div>
          <% end %>
          <% end %>
      </div>
    </div>

<!--追蹤自己的人-->

      <div class = "panel panel-default">
        <div class = "panel panel-heading">
          <h3 class = "panel-title"><%= @followers.count %> followers </h3>
        </div>
        <ul class = "list-group">
          <% @followers.each do |follower| %>
          <li class = "list-group-item">
          <%= link_to user_path(follower) do%>
          <img src="http://via.placeholder.com/30x30">
          <!--<div><%= image_tag following.avatar %></div>-->
          <%= follower.name %>
          <% end %>
          </li>
          <% end %>
        </ul>
      </div>
</div>  



<!--已評論餐廳-->      

    <div class = "col-sm-8">
      <div class = "panel panel-default">
        <div class = "panel-heading">
          <h3 class = "panel-title"><%= @commented_restaurants.count %> 已評論餐廳 </h3>
        </div>
        <div class = "panel-body">
          <% @commented_restaurants.each do |restaurant| %>
          <%= link_to restaurant_path(restaurant) do%>
          <div class = "my-restaurant">
          <img src="https://api.fnkr.net/testimg/80x80/00CED1/FFF/?text=img+placeholder">
          <!--<div><%= image_tag restaurant.image %></div>-->
          <h5><%= restaurant.name %></h5>
          </div>
          <% end %>
          <% end %>
        </div>
 
      </div>

<!--已收藏餐廳-->      
        <div class = "panel panel-default">
        <div class = "panel-heading">
          <h3 class = "panel-title"><%= @favorited_restaurants.count %> 已評論餐廳 </h3>
        </div>
        <div class = "panel-body">
          <% @favorited_restaurants.each do |restaurant| %>
          <%= link_to restaurant_path(restaurant) do%>
          <div class = "my-restaurant">
          <img src="https://api.fnkr.net/testimg/80x80/00CED1/FFF/?text=img+placeholder">
          <!--<div><%= image_tag restaurant.image %></div>-->
          <h5><%= restaurant.name %></h5>
          </div>
          <% end %>
          <% end %>
        </div>
 
      </div>


    </div>

 